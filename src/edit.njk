---
layout: base.njk
pagination:
  data: notations
  size: 1
  alias: notationEntry
  resolve: values
permalink: "edit/{{ notationEntry.title | slug }}/"
---

<div class="bg-white shadow overflow-hidden sm:rounded-lg max-w-5xl mx-auto">
    <div class="px-4 py-5 sm:px-6">
        <h1 class="text-3xl font-bold leading-tight text-gray-900">
            Edit Notation: {{ notationEntry.title }}
        </h1>
    </div>
    <div class="border-t border-gray-200 px-4 py-5 sm:p-6">
        <form name="notation-edit" method="POST" action="/.netlify/functions/update-notation" enctype="multipart/form-data" class="space-y-8">
            <input type="hidden" name="originalTitle" value="{{ notationEntry.title }}">
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">
                <div class="col-span-1">
                    <label for="title" class="block text-sm font-medium text-gray-700">Title</label>
                    <input type="text" name="title" id="title" value="{{ notationEntry.title }}" required class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">
                </div>

                <div class="col-span-1">
                    <label for="symbol" class="block text-sm font-medium text-gray-700">Symbol</label>
                    <input type="text" name="symbol" id="symbol" value="{{ notationEntry.symbol }}" required class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">
                </div>

                <div class="col-span-2">
                    <label for="definition" class="block text-sm font-medium text-gray-700">Definition</label>
                    <textarea name="definition" id="definition" rows="3" required class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">{{ notationEntry.definition }}</textarea>
                </div>

                <div class="col-span-2">
                    <label for="usage" class="block text-sm font-medium text-gray-700">Usage</label>
                    <textarea name="usage" id="usage" rows="3" required class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">{{ notationEntry.usage }}</textarea>
                </div>

                <div class="col-span-2">
                    <label for="image" class="block text-sm font-medium text-gray-700">Image</label>
                    {% if notationEntry.image %}
                    <img src="/{{ notationEntry.image }}" alt="{{ notationEntry.title }} illustration" class="mt-1 max-w-xs h-auto">
                    {% endif %}
                    <input type="file" name="image" id="image" accept="image/*" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md border border-blue-200">
                </div>

                <div class="col-span-2">
                    <label for="example1_description" class="block text-sm font-medium text-gray-700">Example 1 Description</label>
                    <input type="text" name="example1_description" id="example1_description" value="{{ notationEntry.examples[0].description }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">
                </div>

                <div class="col-span-2">
                    <label for="example2_description" class="block text-sm font-medium text-gray-700">Example 2 Description</label>
                    <input type="text" name="example2_description" id="example2_description" value="{{ notationEntry.examples[1].description }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">
                </div>

                <div class="col-span-1">
                    <label for="tags" class="block text-sm font-medium text-gray-700">Tags (comma-separated)</label>
                    <input type="text" name="tags" id="tags" value="{{ notationEntry.tags | join(', ') }}" required class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">
                </div>

                <div class="col-span-1">
                    <label for="relatedConcepts" class="block text-sm font-medium text-gray-700">Related Concepts (comma-separated)</label>
                    <input type="text" name="relatedConcepts" id="relatedConcepts" value="{{ notationEntry.relatedConcepts | join(', ') }}" class="mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-lg border-gray-300 rounded-md border border-blue-200">
                </div>
            </div>

            <div class="pt-5">
                <div class="flex justify-end">
                    <button type="submit" class="ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                        Update Notation
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>