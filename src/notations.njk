---
layout: base.njk
pagination:
  data: notations
  size: 1
  alias: notationEntry
  resolve: values
permalink: "notations/{{ notationEntry.title | slug }}/"
---

<pre>
Debug Info:
{{ notationEntry | dump(2) }}
</pre>

<article class="notation">
  <h1>{{ notationEntry.title }}</h1>
  
  <section class="symbol">
    <h2>Symbol</h2>
    <p class="large-symbol">{{ notationEntry.symbol }}</p>
  </section>

  <section class="definition">
    <h2>Definition</h2>
    <p>{{ notationEntry.definition }}</p>
  </section>

  <section class="usage">
    <h2>Usage</h2>
    <p>{{ notationEntry.usage }}</p>
  </section>

<section class="examples">
  <h2>Examples</h2>
  <ul>
  {% for example in notationEntry.examples %}
    <li>
      <p>Description: {{ example.description }}</p>
      <p>LaTeX: <math-field read-only>{{ example.latex }}</math-field></p>
    </li>
  {% endfor %}
  </ul>
</section>

  <section class="tags">
    <h2>Tags</h2>
    <ul>
    {% for tag in notationEntry.tags %}
      <li><a href="/tags/{{ tag | slug }}/">{{ tag }}</a></li>
    {% endfor %}
    </ul>
  </section>

  <section class="related-concepts">
    <h2>Related Concepts</h2>
    <ul>
    {% for concept in notationEntry.relatedConcepts %}
      <li>{{ concept }}</li>
    {% endfor %}
    </ul>
  </section>
</article>

<script>
document.addEventListener('DOMContentLoaded', function() {
  document.querySelectorAll('math-field').forEach(function(element) {
    element.setValue(element.textContent);
  });
});
</script>

<style>
.large-symbol {
  font-size: 2em;
  font-weight: bold;
}
.latex-render {
  margin: 10px 0;
  padding: 5px;
  background-color: #f9f9f9;
  border-radius: 5px;
}
</style>